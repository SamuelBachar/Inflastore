<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="Neminaj.Views.AddCardView"
             Title="Pridanie karty">
    <Grid RowDefinitions="10, *, *, Auto, Auto" ColumnDefinitions="10, *, 10">
        <cv:CameraView Grid.Row="1" Grid.Column="1" x:Name="cameraView" CamerasLoaded="cameraView_CamerasLoaded" 
                           BarCodeDetectionEnabled="True" BarcodeDetected="cameraView_BarcodeDetected"
                           VerticalOptions="Start" HorizontalOptions="Start"/>
        <VerticalStackLayout>
            <Image Grid.Row="2" Grid.Column="1" x:Name="CardImage" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Grid.Row="3" Grid.Column="1" x:Name="lblCode" VerticalOptions="Center" HorizontalOptions="Center" />
            <Button Grid.Row="4" Grid.Column="1" x:Name="btnAddCard" IsVisible="false" Text="Uložiť kartu" VerticalOptions="Center" HorizontalOptions="Center" Clicked="btnAddCard_Clicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>