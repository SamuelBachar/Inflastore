<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Neminaj.Views.SavedCardDetailView"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             Title="Klubová karta">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Zmazať" IconImageSource="recycle_bin.svg" Clicked="ToolbarItemDelete_Clicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="*,Auto" ColumnDefinitions="2">
        <!--<Image Grid.ColumnSpan="2" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Aspect="AspectFill"/>-->
        <cv:BarcodeImage x:Name="CardCode" Grid.ColumnSpan="2" Grid.Row="0" 
                         HorizontalOptions="Center" VerticalOptions="Center"
                         Aspect="AspectFill" BarcodeForeground="White" BarcodeBackground="Black" />

        <Label x:Name="lblCardCode" Grid.ColumnSpan="2" Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" />
    </Grid>

</ContentPage>